<head>
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>

<header>
    <!-- navigation -->
    <nav class="navbar navbar-light bg-light">
        <div class="container d-flex justify-content-between">
            <a class="navbar-brand" href="/">
                <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
                    width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
                我的餐廳清單
            </a>
            <a class="add-restaurant" href="/restaurants/new">
            <i class="fas fa-plus-circle">Add Restaurant</i>
            </a>
        </div>
    </nav>

    <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar d-flex justify-content-between">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/restaurants/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                        aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>

<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="sortButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Sort
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="/sort/rating/desc">評分-由高至低</a>
    <a class="dropdown-item" href="/sort/rating/asc">評分-由低至高</a>
    <a class="dropdown-item" href="/sort/name/asc">店名-A->Z</a>
    <a class="dropdown-item" href="/sort/name/desc">店名-Z->A</a>
  </div>
</div>
    
</div>

<!-- restaurant list -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="card-columns">
                {{#each restaurants}}
                <a href="/restaurants/{{this._id}}" class="text-secondary">
                    <div class="card mb-3">
                        <img class="card-img-top"
                            src="{{this.image}}"
                            alt="{{this.name}}">
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>

                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-2"></i> {{this.category}}
                            </div>

                            <span class="badge badge-pill badge-danger font-weight-normal">
                                {{this.rating}}
                                <i class="fas fa-star fa-xs"></i>
                            </span>
                        </div>
                        <div class="crud-button d-flex justify-content-end">
                            <div>
                                <a href="/restaurants/{{this._id}}"><i class="fas fa-info-circle"></i></a>
                            </div>
                            <div>
                                <a href="/restaurants/{{this._id}}/edit"><i class="far fa-edit"></i></a>
                            </div>
                            <div class="delete-button">
                                <form action="/restaurants/{{ this._id }}/?_method=delete" method="POST" style="display: inline;">
                                <button type="submit"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>